{
  "manifest_version": 2,
  "author": {
    "name": "Bruno Portis",
    "email": "bruno@portis.dev"
  },
  "name": "Copy Authorization Header",
  "version": "1.0",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "clipboardWrite",
    "storage",
    "*://*/*",
    "contextMenus"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
